{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "lib": ["ES2015","ES7"],
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "jest.config.js",
    "jest.setup.ts",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}